#include <WiFi.h>
#include <HTTPClient.h>

const char* ssid = "NOME_DA_REDE_WIFI";
const char* password = "SENHA_DA_REDE_WIFI";

String phoneNumber = "+5516997231155"; // Removi o "=" no início do número
String apiKey = "SUA_CHAVE_API";

void sendMessage(String message) {
  String encodedMessage = URLEncoder.encode(message); // Codifica a mensagem

  // Constrói o URL com a mensagem codificada
  String url = "https://api.callmebot.com/whatsapp.php?phone=" + phoneNumber + "&apikey=" + apiKey + "&text=" + encodedMessage;

  HTTPClient http;
  http.begin(url);

  // Define o cabeçalho Content-Type
  http.addHeader("Content-Type", "application/x-www-form-urlencoded");

  // Envia a requisição HTTP POST
  int httpResponseCode = http.POST(""); // Não é necessário enviar dados no POST

  if (httpResponseCode == 200) {
    Serial.println("Mensagem enviada com sucesso");
  } else {
    Serial.println("Erro ao enviar a mensagem");
    Serial.print("Código de resposta HTTP: ");
    Serial.println(httpResponseCode);
  }

  // Libera os recursos
  http.end();
}

void setup() {
  Serial.begin(115200);

  WiFi.begin(ssid, password);
  Serial.println("Conectando");

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("");
  Serial.print("Conectado à rede WiFi com o endereço IP: ");
  Serial.println(WiFi.localIP());

  // Envia a mensagem para o WhatsApp
  sendMessage("Hora de se medicar!!!!");
}

void loop() {
  // Seu código aqui
}
